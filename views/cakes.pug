extends layout

block content
  - let cakes = results
  h1= title
  div(class="container-fluid")
  div(class="row m-1")
    each cake in cakes
      - let destination = `dispatch(\"/cakes/update?id=${cake._id}\")`
      div(class="row-sm-2", class="m-1") Cake #{cake.cake_Name}(#{cake.cake_flavour}) is #{cake.cost} 
        button.btn( class="btn-primary ml-1", onclick= destination) Update

  script.
    function dispatch(path){
      window.location.href=path
    }